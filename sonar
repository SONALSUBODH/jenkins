pipeline {
    stages {
        stage ('code-pull'){
            steps {
                git 'https://github.com/mayurmwagh/student-ui.git'
            }
        }
        
        stage ('build'){
            steps {
                sh 'mvn clean package'
            }
        }
        stage ('testing'){
            steps {
              withSonarQubeEnv(installationName:'sonar' , credentialsId: 'sonar-tokan'){  
                   sh 'mvn sonar:sonar -Dsonar.projectkey=studentapp'
                 }
           }
     }
        stage ('quality-gate'){
            steps {
              timeout(1) {
              waitForQualityGate abortPipeline: false, credentialsId: 'sonar-tokan'
              }
          }
       }
     }
   }
}
